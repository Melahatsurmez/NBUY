
@model ConfirmDto
<h1>Link Onayı</h1>
<hr />
<form asp asp-controller="Account"
asp-action="ConfirmLink"
method="post"
>
<div class="row">
	<div class="col-4">
		<div asp-validation-summary="All" class="text-danger"></div>
		<div class="mb-3">
			<label class="form-label">Email adresinizi girin:</label>
			<input class="form-control" name="email" type="email" />
		</div>
		<button type="submit" class="btn btn-primary">Onay Linki</button>
		<a type="button" class="btn btn-light"
		asp-controller="Home"
		asp-action="Index">Vageç</a>
	</div>
</div>
</form>